{
  "compilerOptions": {
    "lib": ["esnext", "dom", "deno.ns"],
    "strict": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "target",
    "docs/app/dist.js",
    "docs/src/app"
  ],
  "imports": {
    "esbuild": "npm:esbuild@^0.25.1",
    "prettier": "npm:prettier@^3.5.3",
    "ts-blank-space": "npm:ts-blank-space@^0.6.1",
    "typescript": "npm:typescript@^5.8.3"
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "format": "deno run -A npm:prettier --write docs/app docs/src"
  }
}
